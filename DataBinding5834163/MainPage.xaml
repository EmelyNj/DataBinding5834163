<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBinding5834163.MainPage"
             xmlns:local="clr-namespace:DataBinding5834163"
             >
    <ContentPage.BindingContext>
        <local:Alumno/>
    </ContentPage.BindingContext>
    <StackLayout>
        <Entry x:Name="NombreAlumno" Text="{Binding Nombre}" Placeholder="Ingrese su nombre"></Entry>
        <Label Text="{Binding MostrarNombre}"></Label>
    </StackLayout>

</ContentPage>
